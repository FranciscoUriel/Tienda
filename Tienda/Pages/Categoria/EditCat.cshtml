@page
@model Tienda.EditCatModel

@{
    ViewData["Title"] = "Edit";
  
}

<h1>Edit</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categoria.NomCategoria" />
            <div class="form-group">
                <label asp-for="Categoria.NomCategoria" class="control-label"></label>
                <label asp-for="Categoria.NomCategoria" class="control-label" >: @Html.DisplayFor(model => model.Categoria.NomCategoria)</label>
                <span asp-validation-for="Categoria.NomCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.Detalle" class="control-label"></label>
                <input asp-for="Categoria.Detalle" class="form-control" />
                <span asp-validation-for="Categoria.Detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./IndexCategoria">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
